generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cash {
  id     Int    @id @default(autoincrement())
  userId String
  amount String

  @@index([userId])
}

model Enrollment {
  id           Int    @id @default(autoincrement())
  role         Role
  bankBalance  String
  bankInterest String
  userId       String
  classId      Int
}

model Class {
  name        String
  enrollments Int[]
  id          Int    @id @default(autoincrement())
  classCode   String @unique
}

model Transaction {
  id         Int      @id @default(autoincrement())
  amount     String
  createdAt  DateTime @default(now())
  note       String
  fromUserId String
  toUserId   String
}

model CustomTransaction {
  id      Int    @id @default(autoincrement())
  amount  String
  userId  Int
  classId Int
}

enum Role {
  STUDENT
  TEACHER
}
