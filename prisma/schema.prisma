generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Cash {
  id     Int    @id @default(autoincrement())
  userId String
  amount String

  @@index([userId])
}

model Enrollment {
  id           Int    @id @default(autoincrement())
  role         Role
  cash         Float
  bankBalance  Float
  bankInterest Float
  userId       String
  classId      Int
  class        Class  @relation(fields: [classId], references: [id])
}

model Class {
  id                Int                 @id @default(autoincrement())
  name              String
  enrollments       Int[]
  CustomTransaction CustomTransaction[]
  Enrollment        Enrollment[]
  classCode         String              @unique
}

model Transaction {
  id               Int        @id @default(autoincrement())
  amount           Float
  createdAt        DateTime   @default(now())
  note             String
  fromUserId       String
  toUserId         String
  fromEnrollmentId Int
  toEnrollmentId   Int
  transactionType  TransType?
}

model CustomTransaction {
  id      Int    @id @default(autoincrement())
  amount  String
  userId  Int
  classId Int
  class   Class  @relation(fields: [classId], references: [id])
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum TransType {
  WITHDRAW
  DEPOSIT
  TRANSFER
}
