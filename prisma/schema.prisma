generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id                 Int      @id @default(autoincrement())
  ownerId            String
  balance            Float
  interestRate       Float
  interestPeriodDays Float
  Ledger             Ledger[]

  @@index([ownerId])
}

model Enrollment {
  id                  Int    @id @default(autoincrement())
  userId              String
  classId             Int
  role                Role
  class               Class  @relation(fields: [classId], references: [id])
  investmentAccountId Int
  checkingAccountId   Int

  @@index([id])
}

model Class {
  id                Int                 @id @default(autoincrement())
  name              String
  classCode         String              @unique
  Enrollment        Enrollment[]
  CustomTransaction CustomTransaction[]

  @@index([id])
}

model Ledger {
  id        Int      @id @default(autoincrement())
  accountId Int
  account   Account  @relation(fields: [accountId], references: [id])
  debit     Float
  credit    Float
  datetime  DateTime @default(now())

  @@index([id])
}

model Transaction {
  id        Int      @id @default(autoincrement())
  from      String
  to        String
  amount    Float
  createdAt DateTime @default(now())
  note      String
}

model CustomTransaction {
  id      Int    @id @default(autoincrement())
  amount  String
  Class   Class? @relation(fields: [classId], references: [id])
  classId Int?
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}
